<p id="notice"><%= notice %></p>

<h1>Listing cocktails</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |c| %>
      <tr>
        <td><%= c.name %></td>

        <td><%= link_to "See details", c, class: "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_cocktail_path(c) %></td>
        <td><%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

